# Proxmox Connection Settings
proxmox_api_url      = "https://your-proxmox-host:8006/api2/json"
proxmox_user         = "root@pam"
proxmox_password     = "your-proxmox-password"
proxmox_node         = "your-proxmox-node-name"
proxmox_tls_insecure = true

# VM Template and Storage
vm_template    = "ubuntu-24.04-cloudinit"
storage_pool   = "local-lvm"
network_bridge = "vmbr0"

# SSH Configuration
ssh_public_key = "ssh-rsa AAAAB3NzaC1yc2E... your-public-key-here"
vm_user        = "ubuntu"

# Network Configuration
gateway     = "192.168.1.1"
dns_servers = ["8.8.8.8", "8.8.4.4"]

# HDD Storage Path on Proxmox Host
hdd_storage_path = "/mnt/hdd-data"

# Master Node Configuration (default values shown, can be customized)
master_vm = {
  name      = "k3s-master"
  cores     = 2
  memory    = 4096
  disk_size = "32G"
  ip        = "192.168.1.120"
}

# Worker Nodes Configuration (default values shown, can be customized)
worker_vms = {
  worker1 = {
    name      = "k3s-worker-1"
    cores     = 4
    memory    = 8192
    disk_size = "32G"
    ip        = "192.168.1.121"
  }
  worker2 = {
    name      = "k3s-worker-2"
    cores     = 3
    memory    = 8192
    disk_size = "32G"
    ip        = "192.168.1.122"
  }
  worker3 = {
    name      = "k3s-worker-3"
    cores     = 3
    memory    = 8192
    disk_size = "32G"
    ip        = "192.168.1.123"
  }
}